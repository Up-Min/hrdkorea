
function signup() {
	var f = document.signup_form;

	if (f.user_id == '') {
		alert("아이디를 입력해 주십시오.");
		return false;
	}
	if (f.user_pwd == '') {
		alert("비밀번호를 입력해 주십시오.");
		return false;
	}
	if (f.user_email == '') {
		alert("이메일 주소를 입력해 주십시오.");
		return false;
	}

	alert("회원가입이 완료 되었습니다!");
	f.submit();
}

function chkInsert() {
	var w = document.insertForm();
	alert("운동 기록이 완료 되었습니다!");
	w.submit();
}

function chk_delete() {
	var l = document.list;
	const result = confirm("정말 삭제하시겠습니까?");
	if(result){
	 l.submit();	
	}
	return false;
}

function chk_cancel(user_id, user_pwd) {
	const result = confirm("하시던 운동을 취소하시겠습니까?");
	if (result) {
		location.href = "/jsp_workout/signin?user_id=" + user_id + "&user_pwd=" + user_pwd;
	} else {
		return false;
	}
	
}

function update() {
	var w = document.update;
 	alert("수정이 완료 되었습니다!");
 	w.submit();
}
